{
    "manifest_version": 3,
    "name": "YouTube Do Not Recommend Channel",
    "version": "1.3",
    "description": "Clicks 'Do not recommend channel' for recommended videos when activated",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "action": {
      "default_title": "Run/Stop Do Not Recommend"
    },
    "background": {
      "service_worker": "background.js"
    }
  }